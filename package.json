{
  "name": "yz-xiuxian",
  "version": "1.0.0-rc.4",
  "description": "喵崽修仙插件",
  "main": "main.js",
  "type": "module",
  "author": "ningmengchongshui",
  "license": "MIT",
  "scripts": {
    "app": "npx tsx src/main.ts",
    "img-app": "npx tsx routes.server.ts",
    "img-dev": "nodemon --config routes.nodemon.json",
    "css-app": "tailwindcss -i ./src/input.css -o ./public/output.css",
    "css-dev": "tailwindcss -i ./src/input.css -o ./public/output.css --watch",
    "css-m": "tailwindcss -i ./src/input.css -o ./public/output.css -m",
    "prepare": "husky",
    "format": "npx prettier --write .",
    "check-format": "git diff --exit-code",
    "build": "npm run css-m && rollup --config rollup.config.js",
    "start": "pm2 start pm2.config.cjs",
    "stop": "pm2 stop yz-xiuxian",
    "restart": "pm2 restart yz-xiuxian",
    "logs": "pm2 logs yz-xiuxian"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "puppeteer": "^22.13.1",
    "react": "^18.3.1",
    "react-puppeteer": "^1.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.3.1",
    "@types/progress": "^2.0.5",
    "@types/react": "18.2.73",
    "dotenv": "^16.4.1",
    "husky": "^9.0.11",
    "nodemon": "^3.1.0",
    "prettier": "2.8.7",
    "rollup": "^3.28.1",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "yunzai": "^1.0.4"
  },
  "types": "lib/types",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/types/index.d.ts"
    }
  },
  "keywords": [
    "yunzai"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
