{
  "name": "yz-xiuxian",
  "version": "1.0.0-rc.3",
  "description": "喵崽修仙插件",
  "main": "main.js",
  "type": "module",
  "author": "ningmengchongshui",
  "license": "MIT",
  "scripts": {
    "app": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/main.js",
    "dev": "nodemon",
    "koa:dev": "nodemon --config server/nodemon.json -q",
    "start": "pm2 startOrRestart server/pm2.config.cjs",
    "stop": "pm2 stop server/pm2.config.cjs",
    "list": "pm2 stop",
    "logs": "pm2 logs",
    "kill": "pm2 kill",
    "format": "npx prettier --write .",
    "css": "tailwindcss -i ./src/input.css -o ./public/output.css",
    "css:m": "tailwindcss -i ./src/input.css -o ./public/output.css -m",
    "prepare": "husky",
    "build": "npm run css:m && rollup --config rollup.config.js"
  },
  "dependencies": {
    "puppeteer": "^22.13.1",
    "react": "^18.3.1",
    "react-puppeteer": "^1.0.0-rc.7"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/preset-react": "^7.24.1",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-multi-entry": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/jsrsasign": "^10.5.14",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.6",
    "@types/koa-mount": "^4.0.5",
    "@types/koa-router": "^7.4.8",
    "@types/koa-static": "^4.0.4",
    "@types/koa-websocket": "^5.0.10",
    "@types/koa2-cors": "^2.0.5",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.3.1",
    "@types/node-schedule": "^2.1.2",
    "@types/nodemailer": "^6.4.14",
    "@types/progress": "^2.0.5",
    "@types/qrcode": "^1.5.0",
    "@types/react": "18.2.73",
    "@types/ws": "^8.5.5",
    "bcrypt": "^5.1.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.1",
    "husky": "^9.0.11",
    "koa": "^2.15.2",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-mount": "^4.0.0",
    "koa-router": "^12.0.1",
    "koa-static": "^5.0.0",
    "koa-websocket": "^7.0.0",
    "koa2-cors": "^2.0.6",
    "lodash-es": "^4.17.21",
    "mysql2": "^3.9.2",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.8",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.38",
    "prettier": "2.8.7",
    "qrcode": "^1.5.3",
    "rollup": "^3.28.1",
    "tailwindcss": "^3.4.3",
    "terser": "^5.31.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.4",
    "typescript": "^5.5.4",
    "ws": "^8.13.0",
    "yunzai": "^1.0.1-rc.1"
  },
  "files": [
    "public",
    "public/output.css",
    "resources",
    "lib"
  ],
  "types": "lib/types",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/types/index.d.ts"
    }
  },
  "keywords": [
    "yunzai"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
